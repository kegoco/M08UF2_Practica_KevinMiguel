<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_btn03__camara"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.kevin.m08uf2_practica_kevinmiguel.Btn03_Camara">

    <Button
        android:text="@string/hacer_foto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnFoto"
        tools:ignore="ButtonStyle"
        android:onClick="fesFoto" />

    <Button
        android:text="@string/atr_s"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnAtras"
        tools:ignore="ButtonStyle,RelativeOverlap"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="28dp"
        android:layout_alignBottom="@+id/btnFoto" />

    <ImageView
        android:layout_width="wrap_content"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/imgFoto"
        android:contentDescription="@string/foto_para_visualizarrrrr"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/btnFoto"
        android:layout_marginStart="25dp" />

</RelativeLayout>
